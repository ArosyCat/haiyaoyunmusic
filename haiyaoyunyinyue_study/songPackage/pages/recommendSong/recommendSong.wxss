/* 每日推荐的头部长宽 */
@import "/static/iconfont/iconfont.wxss";
page {
    height: 100%;
}
.recommendSongContainer .header {
    position: relative;
    width: 100%;
    height: 300rpx;
}
/* 每日推荐的图片样式 */
.recommendSongContainer .header image {
    width: 100%;
    height: 100%;
}
/* 设置日期的样式和位置 */
.recommendSongContainer .header .date {
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -150rpx;
    margin-top: -50rpx;
    width: 300rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: white;
    font-size: 80rpx;
    font-family: "Bradley Hand ITC";
    font-weight: bold;
}

.header .date .day {
    font-size: 90rpx;
}

/* 列表区域的样式 */
.ListContainer {
    position: relative;
    top: -20rpx;
    padding: 0 20rpx;
    border-radius: 30rpx;
    background: white;
}
.listHeader {
    /*height: 80rpx;*/
    /*line-height: 80rpx;*/
    display: flex;
}
.listHeader .changeMore {
    float: right;
}

/* 内容区样式 */
.listScroll {
    height: calc(100vh - 380rpx);
}

.scrollItem {
    position: relative;
    display: flex;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
}
.scrollItem image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
}

.musicInfo {
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
}

.musicInfo text{
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    max-width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.scrollItem .iconfont {
    position: absolute;
    right: 0;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: right;
}

.scrollItem .icon-xuanze {
    position: absolute;
    width: 38rpx;
    height: 38rpx;
    line-height: 38rpx;
    margin-top: 20rpx;
    right: 0;
    z-index: 999;
}

/* 播放已选按钮样式 */
.playMultipleChoiceBtn {
    position: absolute;
    top: 20rpx;
    margin-left: 40%;
    border-radius: 30rpx;
    border: 1rpx solid #eee;
    width: 160rpx;
    text-align: center;
    background: #949b8b;
    color: white;
}

/* 播放全部按钮 */
.playAll {
    position: relative;
    top: 10rpx;
    width: 40rpx;
    height: 40rpx;
    line-height: 50rpx;
}
.playAllText {
    margin-left: 10rpx;
}

/* 将播放全部按钮包起来 */
.playAllContainer {
    height: 60rpx;
    width: 180rpx;
    border-radius: 25rpx;
    margin: 15rpx 0;
    border: 1rpx solid #eee;
}

/* 设置点击效果 */
.detail-hover {
    opacity: 0.9;
    /*transform: scale(0.9,0.9);   !* 设置缩放 *!*/
    background: #eee;
}

.changeMore {
    position: relative;
    left: 65%;
    top: 20rpx;
}

.showMoreFunction {
    height: 100%;
    width: 100%;
    position: fixed;
    background-color:rgba(0, 0, 0, .5);
    top: 0;
    left: 0;
    z-index: 999;
}

.showMore {
    padding: 40rpx 0;
    width: 80%;
    background: #fff;
    margin: 40% auto;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    position: relative;
}

.search {
    width: 520rpx;
    height: 110rpx;
    margin-top: 30rpx;
    margin-bottom: 30rxp;
    display: flex;
    border-radius: 20rpx;
}

.showMoreFunction .searchIcon {
    margin: 30rpx 10rpx;
}

.showMoreFunction text {
    margin-top: 30rpx;
}

.close {
    height: 60rpx!important;
    width: 60rpx!important;
    position: absolute;
    top: 10rpx;
    right: -10rpx;
    z-index: 10000;
}






