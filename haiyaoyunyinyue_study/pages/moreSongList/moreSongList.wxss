/* pages/tempPersonalSongList/tempPersonalSongList.wxss */

/*推荐歌曲样式*/
.recommendContainer {
    padding: 20rpx;  /*内边距 */
}

/* 推荐内容区样式 */
.recommendScroll {
    display: flex;
    height: 300rpx;
}

.scrollItem {
    width: 200rpx;
    margin-right: 20rpx;  /* 外边距，item与item之间隔开 */
}

.scrollItem image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 15rpx;
}

.scrollItem text {
    font-size: 26rpx;
    /* 单行文本溢出隐藏 省略号代替 */
    /* display: block;
     white-space: nowrap;  !* 不让其换行 *!
     overflow: hidden;  !* 溢出的部分隐藏掉 *!
     text-overflow: ellipsis; !* 隐藏的部分用省略号代替 *!
     */

    /* 多行文本溢出隐藏 省略号代替 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;  /* -webkit模型 */
    -webkit-box-orient: vertical; /* 设置对齐模式 */
    -webkit-line-clamp: 2;  /* 设置多行的行数，2行文本，超过隐藏 */
}

/* 标题 */
.title {
    border-bottom: 1rpx solid #eee;
    margin-bottom: 20rpx;
    font-size: 35rpx;
    font-family: 华文楷体;
}
.forYou {
    float: right;
    font-size: 26rpx;
    font-family: 微软雅黑;
}
