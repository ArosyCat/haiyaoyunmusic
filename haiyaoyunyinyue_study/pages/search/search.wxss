/* pages/search/search.wxss */
.searchContainer {
    padding: 0 20rpx;
}
/* 头部样式 */
.header {
    display: flex;
    height: 60rpx;
    line-height: 60rpx;
    padding: 10rpx 0;
}
/* 搜索框样式 */
.searchInput {
    position: relative;     /* 相对定位 */
    /* flex: 1 -> 设置搜索框为可拉伸的 */
    flex: 1;
    background: rgba(237,237,237,0.3);
    border-radius: 30rpx;
    z-index: 30;
}

.clear {
    position: absolute;
    right: 30rpx;
    z-index: 10;           /* 需要把层级调高，不然点击清除不起作用 */
    top: 0;
    font-size: 30rpx;
}

/* 取消键样式 */
.cancel {
    /* 让取消键固定占一个地方 */
    width: 100rpx;
    text-align: center;
}
/* 搜索小图标样式 */
.searchIcon {
    position: absolute;  /* 绝对定位 */
    left: 15rpx;
}
/* 搜索框中输入的文本样式 */
.searchInput input {
    margin-left: 80rpx;
    height: 60rpx;
}
/* 搜索框中默认的文本样式 */
.placeholder {
    color: #c1a6a6;
    font-size: 28rpx;
}
/* 热搜榜样式 */
.hotContainer .title {
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #c2a7a7;
}

.hotList {
    display: flex;
    flex-wrap: wrap;
}

.hotItem {
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 27rpx;
}

.hotItem .order {
    margin: 0 13rpx;
}

.iconImg {
    width: 35rpx;
    height: 20rpx;
    margin-left: 10rpx;
}
/* 搜索内容展示 */
.searchContent {
    color: rgba(81, 81, 128, 0.8);
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    border-bottom: 1rpx solid black;
}

.searchItem {
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
}

.searchItem .content {
    flex: 1;
    margin-left: 20rpx;
    border-bottom: 1rpx solid #eee;
    font-size: 26rpx;
}

/* 搜搜历史 */
.history {
    position: relative;
    display: flex;
    top: 8rpx;
    flex-wrap: wrap;   /* 自动换行 */
    line-height: 50rpx;
    margin: 7rpx 0;
}

.history .title {
    font-size: 28rpx;
    height: 50rpx;
}

.history .historyItem {
    height: 50rpx;
    font-size: 26rpx;
    background: #ededed;
    margin-left: 20rpx;    /* 外边距 */
    padding: 0 30rpx;      /* 内边距 */
    border-radius: 20rpx;
    margin-bottom: 20rpx;
}

.history .delete {
    color: #8b8787;
    position: absolute;
    bottom: 20rpx;
    right: 10rpx;
    font-size: 36rpx;
}