/* pages/personalIndex/personalIndex.wxss */
.indexContainer {
    display: flex;
    flex-direction: column;
}
/* 头像框 */
.indexContainer .Image {
    height: 280rpx;
    line-height: 280rpx;
}

.indexContainer .picFrame {
    height: 380rpx;
    line-height: 380rpx;
}

.indexContainer .Image image {
    position: relative;
    width: 220rpx;
    height: 220rpx;
    line-height: 220rpx;
    border-radius: 50%;
    padding: 20rpx;
    margin-top: 140rpx;
    margin-left: 250rpx;
}

/* personInfo */
.indexContainer .personInfo {
    text-align: center;
    color: #373737;
    height: 120rpx;
}

/* levelAndName */
.indexContainer .personInfo .levelAndName {
    display: flex;
    position: relative;
    left: 25%;
}
.indexContainer .personInfo .levelAndName .name {
    position: relative;
    margin-left: 20rpx;
}

/* createTime */
.indexContainer .personInfo .createTime {
    position: relative;
    margin: 5rpx 0;
}

/* 头像框 */
.indexContainer .backgroundPic image{
    position: absolute;
    height: 340rpx;
    line-height: 340rpx;
    border-bottom: 1rpx solid #eee;
    width: 100%;
}

.personInfo2 {
    position: relative;
    top: 25rpx;
    display: flex;
    flex-direction: column;
}

.personInfo2 .otherInfo {
    width: 100%;
    display: flex;
    margin-bottom: 10rpx;
}

.personInfo2 .otherInfo .textFrame {
    border-left: 1rpx solid #dbd1d1;
    width: 40%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
}

.personInfo2 .otherInfo .textFrame text {
    font-size: 33rpx;
    color: #373737;
}

/* 下面列表的样式 */
.myView {
    width: 100%;
    display: flex;
    align-content: flex-start;
    flex-flow: row wrap;
}
.personalPlayItem {
    width: 200rpx;
    height: 200rpx;
    flex: 0 0 25%;
    margin-left: 40rpx;
    margin-bottom: 100rpx;
}
.personalPlayItem .personalPlayPic {
    width: 200rpx;
    height: 200rpx;
    line-height: 200rpx;
    border-radius: 20rpx;
    margin-top: 20rpx;
}
.personalPlayTitle {
    position: relative;
    font-size: 24rpx;
    width: 200rpx;
    /* 多行文本溢出隐藏 省略号代替 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;  /* -webkit模型 */
    -webkit-box-orient: vertical; /* 设置对齐模式 */
    -webkit-line-clamp: 2;  /* 设置多行的行数，2行文本，超过隐藏 */
}