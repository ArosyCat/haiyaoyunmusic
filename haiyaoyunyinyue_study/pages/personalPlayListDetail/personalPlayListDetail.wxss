/* 列表区域的样式 */
.ListContainer {
    position: relative;
    height: 100%;
    padding: 0 20rpx;
    border-radius: 30rpx;
    background: white;
}
.listHeader {
    height: 80rpx;
    line-height: 80rpx;
    margin-bottom: 10rpx;
    margin-left: 10rpx;
}
.listHeader .changeMore {
    float: right;
}

/* 内容区样式 */
.listScroll {
    height: calc(100vh - 252rpx);
}

.scrollItem {
    position: relative;
    display: flex;
    margin-bottom: 20rpx;
}
.scrollItem image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
}

.musicInfo {
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
}

.musicInfo text{
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    max-width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.scrollItem .iconfont {
    position: absolute;
    right: 0;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: right;
}

/* 播放全部按钮 */
.playAll {
    position: relative;
    top: 10rpx;
    width: 40rpx;
    height: 40rpx;
    line-height: 50rpx;
}

/* 底部播放器的样式 */
.discContainer {
    display: flex;
    position: relative;
    bottom: 0rpx;
    width: 100%;
    height: 160rpx;
    line-height: 160rpx;
    border-top: 1rpx solid #decaca;
    background-color: white;
}
/* 底部左边磁盘样式 */
.myDisc {
    height: 150rpx;
    line-height: 150rpx;
    width: 150rpx;
    margin-left: 20rpx;
    margin-top: 3rpx;
}

.myDisc image {
    width: 150rpx;
    height: 150rpx;
    line-height: 150rpx;
}

.myDisc .picUrl {
    position: absolute;
    border-radius: 50%;
    left: 29rpx;
    top: 10rpx;
    width: 130rpx;
    height: 130rpx;
    line-height: 130rpx;
}

/* 底部中间歌曲信息样式 */
.songInfo {
    display: flex;
    flex-direction: column;
    width: 380rpx;
    height: 130rpx;
    line-height: 130rpx;
    margin-left: 10rpx;
    margin-top: 15rpx;
}

.songInfo text {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
    max-width: 550rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin: auto;
}

.songInfo .songName {
    font-size: 30rpx;
}

/* 底部右边菜单样式 */
.menus {
    display: flex;
    width: 370rpx;
    margin-left: 10rpx;
    height: 130rpx;
    line-height: 130rpx;
    margin-top: 5rpx;
}

.menus .iconfont {
    margin: auto;
    font-size: 33rpx;
}

.menus .isPlay {
    font-size: 70rpx;
}